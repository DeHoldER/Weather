<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.details.DetailsFragment">

    <ProgressBar
        android:id="@+id/loadingBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/infoBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/cityName"
            style="@style/WeatherDetailsFragmentText.Big"
            tools:text="Москва" />

        <TextView
            android:id="@+id/cityCoordinates"
            style="@style/WeatherDetailsFragmentText"
            tools:text="lt/ln : 65.548, 86.4184" />

        <TextView
            android:id="@+id/weatherCondition"
            style="@style/WeatherDetailsFragmentText.Big"
            tools:text="35" />

        <TextView
            style="@style/WeatherDetailsFragmentText"
            android:text="@string/txt_temperature_value" />

        <TextView
            android:id="@+id/temperatureValue"
            style="@style/WeatherDetailsFragmentText.Big"
            tools:text="35" />

        <TextView
            style="@style/WeatherDetailsFragmentText"
            android:text="@string/txt_temperature_feels_like" />

        <TextView
            android:id="@+id/temperatureFeelsLike"
            style="@style/WeatherDetailsFragmentText.Big"
            tools:text="28" />

    </LinearLayout>

</LinearLayout>