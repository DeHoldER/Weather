<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".view.details.DetailsFragment">

    <LinearLayout
        android:id="@+id/loadingBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icGifLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/errorMessage"
            style="@style/WeatherDetailsFragmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Error" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cityName"
            style="@style/WeatherDetailsFragmentText.Big"
            android:layout_marginBottom="15sp"
            tools:text="Москва" />

        <TextView
            android:id="@+id/cityCoordinates"
            style="@style/WeatherDetailsFragmentText"
            android:visibility="gone"
            tools:text="lt/ln : 65.548, 86.4184" />

        <ImageView
            android:id="@+id/condition_Icon"
            android:layout_width="150dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/weatherCondition"
            style="@style/WeatherDetailsFragmentText.Condition"
            tools:text="35" />

        <TextView
            style="@style/WeatherDetailsFragmentText"
            android:text="@string/txt_temperature_value" />

        <TextView
            android:id="@+id/temperatureValue"
            style="@style/WeatherDetailsFragmentText.Big"
            tools:text="35" />

        <TextView
            style="@style/WeatherDetailsFragmentText"
            android:text="@string/txt_temperature_feels_like" />

        <TextView
            android:id="@+id/temperatureFeelsLike"
            style="@style/WeatherDetailsFragmentText.Big"
            tools:text="28" />

    </LinearLayout>


    <ImageView
        android:id="@+id/picDetailsFooterSVG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-55dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/picDetailsFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/icConditionSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoBox" />


</androidx.constraintlayout.widget.ConstraintLayout>